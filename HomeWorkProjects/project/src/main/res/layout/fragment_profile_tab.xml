<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/viewToolbarProfileTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/profile_tab" />


    <TextView
        android:id="@+id/weightText"
        style="@style/TextStyleProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/weight_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/heightText"
        app:layout_constraintTop_toBottomOf="@id/viewToolbarProfileTab" />

    <EditText
        android:id="@+id/viewWeightText"
        style="@style/TextStyleProfileEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/weight_text_empty"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/viewHeightText"
        app:layout_constraintTop_toBottomOf="@id/weightText" />

    <TextView
        android:id="@+id/heightText"
        style="@style/TextStyleProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/height_text"
        app:layout_constraintLeft_toRightOf="@id/weightText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewToolbarProfileTab" />

    <EditText
        android:id="@+id/viewHeightText"
        style="@style/TextStyleProfileEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/height_text_empty"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/viewWeightText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heightText" />

    <TextView
        android:id="@+id/indexWeightText"
        style="@style/TextStyleProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/index_weight_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/viewIndexWeightText"
        app:layout_constraintTop_toBottomOf="@id/viewWeightText" />

    <TextView
        android:id="@+id/viewIndexWeightText"
        style="@style/TextStyleProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/index_text"
        app:layout_constraintLeft_toRightOf="@id/indexWeightText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHeightText" />

    <Button
        android:id="@+id/viewProgressButton"
        style="@style/TextStyleProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="start|center_vertical"
        android:text="@string/progress_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/indexWeightText" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewProgressButton" />

