<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/viewDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:text="01/01/2020"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/viewCategoryText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewCategoryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CategoryName"
        app:layout_constraintLeft_toRightOf="@id/viewDateText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewExerciseText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ExerciseNAme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewDateText" />

    <TextView
        android:id="@+id/viewSetAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:text="@string/set_exercise_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewExerciseText" />

    <TextView
        android:id="@+id/viewAmountSetsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintLeft_toRightOf="@id/viewSetAmountText"
        app:layout_constraintRight_toLeftOf="@id/viewMaxWeightText"
        app:layout_constraintTop_toBottomOf="@id/viewExerciseText" />

    <TextView
        android:id="@+id/viewMaxWeightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:text="@string/max_weight_text"
        app:layout_constraintLeft_toRightOf="@id/viewAmountSetsText"
        app:layout_constraintRight_toLeftOf="@id/viewMaxWeight"
        app:layout_constraintTop_toBottomOf="@id/viewExerciseText" />

    <TextView
        android:id="@+id/viewMaxWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/viewMaxWeightText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewExerciseText" />

</androidx.constraintlayout.widget.ConstraintLayout>